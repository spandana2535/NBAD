<%- include('./partials/header.ejs')%>
<div class="Contact-content">
  <h1>Contact our team</h1>

  <p>
    Our team is happy to answer your queries. <br />
    Fill out the form and we'll get in touch as soon as possible.
  </p>
  <br />
  <form action="/nav/msg" method="get">
    <label for="fname"><b>First Name</b></label>
    <input
      class="contact-input"
      type="text"
      placeholder="First Name"
      name="fname"
      required
    />
    <br />
    <br />
    <label for="lname"><b>Last Name</b></label>
    <input
      class="contact-input"
      type="text"
      placeholder="Last Name"
      name="lname"
      required
    />
    <br />
    <br />
    <label for="email" id="email-label"><b>Email</b></label>
    <input
      class="contact-input"
      id="email-input"
      type="text"
      placeholder="Email"
      name="email"
      required
    />
    <br />
    <br />
    <label for="anything" id="anything-label"
      >Anything else? let us know!</label
    >
    <textarea id="anything" name="anything" rows="4" cols="50"> </textarea>
    <div class="button">
      <button type="submit">Submit</button> <br />
      <br />
    </div>
  </form>
</div>
<%- include('./partials/footer.ejs')%>
