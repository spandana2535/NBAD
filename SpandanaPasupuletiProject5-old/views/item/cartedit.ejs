<%- include('../partials/header.ejs')%>
<div id="cartedit-content">
  <form action="/nav/cart/<%= item.id%>?_method=put" method="POST">
    <label for="quantity">Quantity</label>
    <input
      type="number"
      id="quantity"
      name="quantity"
      step="1"
      value="<%= item.Quantity%>"
      required
      min="1"
      max="20"
    />
    <br />
    <br />
    <button type="submit">Update</button>
  </form>
</div>
